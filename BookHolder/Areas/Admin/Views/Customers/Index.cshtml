@model IEnumerable<BookHolder.Areas.Admin.Models.Customers>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-container">
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="page-header">
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                    @*<a class="breadcrumb-item" href="#">Tables</a>*@
                    <span class="breadcrumb-item active">Danh Sách Khách Hàng</span>
                </nav>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h4>Danh Sách Tài Khoản</h4>
                <div class="m-t-25">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="text-align: center" scope="col">Id</th>
                                    <th style="text-align: center" scope="col">Tên</th>
                                    <th style="text-align: center" scope="col">Số ĐT</th>
                                    <th style="text-align: center" scope="col">Địa Chỉ</th>
                                    <th style="text-align: center" scope="col">Trạng Thái</th>
                                    <th style="text-align: center" scope="col">#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">@item.Id</th>
                                        <td>@item.CustomerName</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Address</td>
                                        <td>@item.Status</td>
                                        <td>
                                            <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="Customers" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                                            <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="Customers" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                                            <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="Customers" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>

                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Content Wrapper END -->
    </div>
    <!-- Page Container END -->

</div>
