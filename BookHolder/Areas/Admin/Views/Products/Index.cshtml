@model IEnumerable<BookHolder.Areas.Admin.Models.Products>

@{
    ViewData["Title"] = "Danh Sach Sản Phẩm";
}

<div class="page-container">
    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="page-header">
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-area="Admin" asp-controller="Home" asp-action="AdminIndex" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
                    <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="breadcrumb-item">Danh sách Sản Phẩm: Trang @*@CurrentPage*@</a>
                </nav>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row m-b-30">
                    <div class="col-lg-8">
                        <div class="d-md-flex">
                            <div class="m-b-10 m-r-15">
                                <select class="custom-select" style="min-width: 180px;">
                                    <option selected>Loại Sản Phẩm</option>
                                    <option value="all">All</option>
                                    <option value="homeDeco">Home Decoration</option>
                                    <option value="eletronic">Eletronic</option>
                                    <option value="jewellery">Jewellery</option>
                                </select>
                            </div>
                            <div class="m-b-10">
                                <select class="custom-select" style="min-width: 180px;">
                                    <option selected>Trạng Thái</option>
                                    <option value="all">All</option>
                                    <option value="inStock">In Stock </option>
                                    <option value="outOfStock">Out of Stock</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-right">
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Products" asp-action="Create"><i class="anticon anticon-plus-circle m-r-5"></i><span>Thêm sản phẩm</span></a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover e-commerce-table">
                        <thead>
                            <tr>                                
                                <th>Id</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Ảnh Đại Diện</th>
                                <th>Loại Sản Phẩm</th>
                                <th>Giá Sản Phẩm</th>
                                <th>Trạng Thái</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>
                                        <img class="img-fluid rounded" src="~/imageProduct/products/@item.image" style="max-width: 60px" alt="">
                                    </td>                                   
                                    <td>@item.Category</td>
                                    <td>@item.Price</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>In Stock</div>
                                        </div>
                                    </td>
                                    <td class="text-right">
                                        <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                            <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id"><i class="anticon anticon-edit"></i></a>
                                        </button>
                                        <button class="btn btn-icon btn-hover btn-sm btn-rounded">
                                            <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id"><i class="anticon anticon-delete"></i></a>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Content Wrapper END -->
</div>