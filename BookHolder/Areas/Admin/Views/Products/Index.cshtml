@model IEnumerable<BookHolder.Areas.Admin.Models.Products>

@{
    ViewData["Title"] = "Danh Sach Sản Phẩm";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="AdminIndex" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="breadcrumb-item">Danh sách Sản Phẩm: Trang @*@CurrentPage*@</a>
        </nav>
    </div>
</div>

<div class="page-container">


    <!-- Content Wrapper START -->
    <div class="main-content">
        <div class="page-header">
            <h2 class="header-title">Basic Table</h2>
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                    <a class="breadcrumb-item" href="#">Tables</a>
                    <span class="breadcrumb-item active">Basic Table</span>
                </nav>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h4>Basic Usage</h4>
                <p>Using the most basic table markup, here’s how <code>.table</code>-based tables look in Bootstrap.</p>
                <div class="m-t-25">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">First</th>
                                    <th scope="col">Last</th>
                                    <th scope="col">Handle</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row"></th>
                                    <td>Mark</td>
                                    <td>Otto</td>
                                    <td>
                                        <a class="btn btn-primary btn-tone m-r-5">Chi tiết</a>
                                        <a class="btn btn-secondary btn-tone m-r-5">Sửa</a>
                                        <a class="btn btn-success btn-tone m-r-5">Xóa</a>

                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">2</th>
                                    <td>Jacob</td>
                                    <td>Thornton</td>
                                    <td>
                                        <a class="btn btn-primary btn-tone m-r-5">Chi tiết</a>
                                        <a class="btn btn-secondary btn-tone m-r-5">Sửa</a>
                                        <a class="btn btn-success btn-tone m-r-5">Xóa</a>

                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">3</th>
                                    <td>Larry</td>
                                    <td>the Bird</td>
                                    <td>
                                        <a class="btn btn-primary btn-tone m-r-5">Chi tiết</a>
                                        <a class="btn btn-secondary btn-tone m-r-5">Sửa</a>
                                        <a class="btn btn-success btn-tone m-r-5">Xóa</a>

                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Content Wrapper END -->
    </div>
    <!-- Page Container END -->

</div>